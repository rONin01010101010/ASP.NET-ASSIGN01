<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Smart Shop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/lib/toastr.js/toastr.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="Guest" asp-controller="Product" asp-action="Index">
                    <i class="bi bi-shop text-primary"></i> Smart Shop
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Guest" asp-controller="Product" asp-action="Index">
                                <i class="bi bi-grid"></i> Products
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Guest" asp-controller="Order" asp-action="Index">
                                <i class="bi bi-box-seam"></i> Track Order
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Guest" asp-controller="Order" asp-action="Cart">
                                <i class="bi bi-cart"></i> Cart
                                @{
                                    var cartService = Context.RequestServices.GetService<COMP2139_assign01.Services.CartService>();
                                    var cartCount = cartService?.GetItemCount() ?? 0;
                                }
                                @if (cartCount > 0)
                                {
                                    <span id="cartCount" class="badge bg-primary">@cartCount</span>
                                }
                                else
                                {
                                    <span id="cartCount" class="badge bg-primary d-none">0</span>
                                }
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-gear"></i> Management Portal
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Smart Shop - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/toastr.js/toastr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
